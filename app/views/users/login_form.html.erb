<div class="wrapper">
  <h1>ログイン</h1>
  <%= form_tag("/login") do %>
    <div class="form">
      <div class="form-item">
        <p>メールアドレス</p>
        <input name="email" value="<%= @email %>" class="textbox">
      </div>
      <div class="form-item">
        <p>パスワード</p>
        <input name="password" type="password" class="textbox">
      </div>
    </div>
    <input type="submit" value="ログイン" class="simplebutton">
  <% end %>
</div>