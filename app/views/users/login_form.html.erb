<div class="wrapper">
  <% if @error_message %>
    <div class="error-message">
      <%= @error_message %>
    </div>
  <% end %>
  <h1>ログイン</h1>
  <%= form_tag("/login") do %>
    <div class="form">
      <div class="form-item">
        <p>メールアドレス</p>
        <input name="email" value="<%= @email %>">
      </div>
      <div class="form-item">
        <p>パスワード</p>
        <input name="password" type="password">
      </div>
    </div>
    <input type="submit" value="ログイン" class="simplebutton">
  <% end %>
</div>