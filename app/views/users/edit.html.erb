<div class="wrapper">
  <h1>編集</h1>
  <% @user.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
  <%= form_tag("/users/#{@user.id}/update", {multipart: true}) do %>
    <div class="form">
      <h2>ユーザー名</h2>
      <textarea name="name"><%= @user.name %></textarea>
      <h2>メールアドレス</h2>
      <textarea name="email"><%= @user.email %></textarea>
      <h2>ユーザーアイコン</h2>
      <input name="image" type="file">
      <div class="buttons">
        <%= link_to("キャンセル", "./", {class: "simplebutton"}) %>
        <input type="submit" value="保存" class="simplebutton">
      </div>
    </div>
  <% end %>
</div>